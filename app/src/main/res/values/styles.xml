<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/dialogTextColor</item>
    <item name="android:itemBackground">@color/colorPrimaryDark</item>
  </style>

  <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
    <item name="android:textColor">#000000</item>
    <item name="android:textColorPrimary">#595959</item>
    <item name="android:colorAccent">#1b5e20</item>
  </style>

  <style name="FragmentTheme" parent="AlertDialog.AppCompat.Light">
    <item name="android:background">@color/colorTranparent</item>
  </style>

  <style name="LocationActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>

  </style>

</resources>
