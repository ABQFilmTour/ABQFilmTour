<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/submit_fragment"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:orientation="vertical"
  android:padding="@dimen/padding_small"
  android:layout_margin="@dimen/margin_x_large"
  android:background="@color/colorPrimaryDark">

  <!-- Image feature to be implemented later
    <ImageView
      android:id="@+id/upload_image"
      android:layout_gravity="center_horizontal"
      android:layout_width="@dimen/upload_image_width"
      android:layout_height="@dimen/upload_image_height" />

    <Button
      android:id="@+id/upload_image_btn"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_small"
      android:background="@color/colorAccent"
      android:text="@string/upload_image"
      android:textColor="@color/colorPrimaryDark" />
      -->

  <android.support.design.widget.TextInputLayout
    android:id="@+id/sitename_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/edit_text_background"
    android:paddingTop="@dimen/padding_medium">

    <EditText
      android:id="@+id/submit_site_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/submit_new_site_name"
      android:maxEms="15"
      android:inputType="text" />

  </android.support.design.widget.TextInputLayout>

  <Button
    android:id="@+id/submit"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/colorAccent"
    android:text="@string/submit"
    android:textColor="@color/colorPrimaryDark" />

</LinearLayout>